FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
USER $APP_UID
WORKDIR /app
EXPOSE 8080
EXPOSE 8081

FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
ARG BUILD_CONFIGURATION=Release
WORKDIR /src
COPY ["kabinizer-api/kabinizer-api.csproj", "kabinizer-api/"]
COPY ["kabinizer-data/kabinizer-data.csproj", "kabinizer-data/"]
RUN dotnet restore "kabinizer-api/kabinizer-api.csproj"
COPY . .
WORKDIR "/src/kabinizer-api"
RUN dotnet build "kabinizer-api.csproj" -c $BUILD_CONFIGURATION -o /app/build

FROM build AS publish
ARG BUILD_CONFIGURATION=Release
RUN dotnet publish "kabinizer-api.csproj" -c $BUILD_CONFIGURATION -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "kabinizer-api.dll"]
